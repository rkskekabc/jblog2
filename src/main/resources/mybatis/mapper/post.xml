<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="post">
	<insert id="insert" parameterType="postvo">
		<![CDATA[
			insert 
				into post
				values(null, #{title }, #{content }, now(), #{categoryNo })
		]]>
	</insert>
	
	<select id="getOne" parameterType="postvo" resultType="postvo">
		<![CDATA[
			select title, content
				from post
				where category_no=#{categoryNo } and no=#{no }
		]]>
	</select>
	
	<select id="getPostList" parameterType="long" resultType="postvo">
		<![CDATA[
			select no, title, content, reg_date as regDate, category_no as categoryNo
				from post
				where category_no=#{value }
		]]>
	</select>
	
	<select id="getMinNum" parameterType="long" resultType="long">
		<![CDATA[
			select min(no)
				from post
				where category_no=#{value }
		]]>
	</select>
	
	<delete id="deleteByCategoryNo" parameterType="long">
		<![CDATA[
			delete 
				from post
				where category_no=#{value }
		]]>
	</delete>
</mapper>